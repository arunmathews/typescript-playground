{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"module": "ES2022",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"lib": ["ES2022"],
		"target": "ES2022",
		"moduleResolution": "bundler"
	},
	"include": ["src/**/*", "test/**/*"]
}
